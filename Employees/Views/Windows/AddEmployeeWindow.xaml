<Window x:Class="Employees.Views.Windows.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:Employees.Commands"
        mc:Ignorable="d"
        Title="ManageEmployeeWindow" Height="650" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    
    <Grid>
        <Button Style="{StaticResource ExitButton}" HorizontalAlignment="Right"
                VerticalAlignment="Top" Name="exit">
            <Button.Command>
                <cmd:CloseApplicationCommand/>
            </Button.Command>
            
            <Image Style="{StaticResource ExitImage}"/>
        </Button>
        <Label Content="Регистрация сотрудника" HorizontalAlignment="Center"
               FontFamily="Times New Roman" FontWeight="Bold" FontSize="40"/>
        <StackPanel HorizontalAlignment="Center" Height="580"
                    VerticalAlignment="Bottom" Width="500">
            <StackPanel Orientation="Horizontal">
                <Label Content="Фамилия" Style="{StaticResource RegistrationLabel}"
                       Margin="20 0 90 0"/>
                <Label Content="Имя" Style="{StaticResource RegistrationLabel}"
                       Margin="70 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding LastName}" Height="40" Width="250"/>
                <TextBox Text="{Binding FirstName}" Height="40"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Отчество" Style="{StaticResource RegistrationLabel}"
                       Margin="20 0 90 0"/>
                <Label Content="Номер телефона" Style="{StaticResource RegistrationLabel}"
                       Margin="75 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding SecondName}" Height="40" Width="250"/>
                <TextBox Text="{Binding SecondName}" Height="40"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Адрес регистрации" Style="{StaticResource RegistrationLabel}"
                       Margin="20 0 0 0"/>
                <TextBox Text="{Binding Address}" Height="40" Width="470"
                         HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Профессия" Style="{StaticResource RegistrationLabel}" 
                       Margin="20 0 0 0"/>
                <Label Content="Фотография" Style="{StaticResource RegistrationLabel}" 
                       Margin="60 0 0 0"/>
                <Label Content="Дата Рождения" Style="{StaticResource RegistrationLabel}" 
                       Margin="10 0 40 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Profession}" Height="40" Width="240"/>
                <Button Content="...." Height="40" Width="70"/>
                <TextBox Text="{Binding BirthDate}" Height="40" Width="145"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="ИНН" Style="{StaticResource RegistrationLabel}"
                       Margin="20 0 70 0"/>
                <Label Content="СНИЛС" Style="{StaticResource RegistrationLabel}"
                       Margin="30 0 70 0"/>
                <Label Content="Паспорт" Style="{StaticResource RegistrationLabel}"
                       Margin="20 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding INN}" Height="40" Width="145"/>
                <TextBox Text="{Binding SNILS}" Height="40" Width="145"/>
                <TextBox Text="{Binding Passport}" Height="40" Width="145"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <Button Content="Регистрация" Height="60" Width="200"
                        Margin="90 0 40 0"/>
                <Button Content="Отмена" Width="110" Background="White"
                        Foreground="Black"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
