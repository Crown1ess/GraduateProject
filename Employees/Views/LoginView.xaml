<UserControl x:Class="Employees.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cmd="clr-namespace:Employees.Commands"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <Button VerticalAlignment="Top" Style="{StaticResource ExitButton}" Name="exit"
                HorizontalAlignment="Right">
            <Button.Command>
                <cmd:CloseApplicationCommand/>
            </Button.Command>
            <Image Style="{StaticResource ExitImage}"/>
        </Button>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Content="Login" FontFamily="Times New Roman" FontWeight="Bold"
                   FontSize="40" Margin="0,-16,0,250"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="+7" Margin="0" Style="{StaticResource NumberLabel}"/>
                    <TextBox Text="{Binding PhoneNumber}" Margin="0"/>
                </StackPanel>
                <PasswordBox x:Name="UserPassword" MaxLength="25" Width="250"/>
            </StackPanel>

            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Login" 
                    CommandParameter="{Binding ElementName=UserPassword}" 
                    Command="{Binding OpenEmployeeWindowCommand}"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
</UserControl>
